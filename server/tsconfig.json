{
  "compilerOptions": {
    "rootDirs": ["./src", "../types"],
    "outDir": "./dist",
    "lib": ["ES5", "ES6", "ESNext"],
    "target": "ES2020",
    "module": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@@/*": ["../types/*"]
    }
  },
  "include": ["./env.d.ts","./src/**/*", "vitest.config.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
